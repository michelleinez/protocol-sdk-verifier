{
  "name": "@kiva/protocol-sdk-verifier",
  "version": "1.0.1",
  "author": "Kiva Microfunds",
  "dependencies": {
    "@blueprintjs/core": "^3.34.1",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "axios": "^0.21.1",
    "classnames": "^2.2.6",
    "lodash": "^4.17.20",
    "node-sass-chokidar": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "qrcode": "^1.4.4",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-notify-toast": "^0.5.1",
    "react-phone-input-2": "^2.13.9",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@boost/translate": "^2.1.3",
    "@types/classnames": "^2.2.10",
    "@types/history": "^4.7.8",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.162",
    "@types/node": "^14.14.0",
    "@types/qrcode": "^1.3.5",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/react-notify-toast": "^0.5.2",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.6",
    "@types/uuid": "^8.3.0",
    "acorn": "^8.0.4",
    "cypress": "^5.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.5",
    "jsonwebtoken": "^8.5.1",
    "react-scripts": "^4.0.0",
    "serve": "^11.3.2",
    "source-map-explorer": "^2.5.0",
    "typescript": "^4.0.3",
    "wait-on": "^5.2.0"
  },
  "scripts": {
    "analyze-build": "source-map-explorer 'build/static/js/*.js'",
    "analyze": "npm-run-all -s build analyze-build",
    "compile": "tsc",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p statFileGen watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "publish-standalone": "firebase deploy --only hosting:standalone",
    "publish-integration": "firebase deploy --only hosting:integration",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "serve-build": "serve -s build",
    "statFileGen": "sh ./tools/bundle/static_file_generator.sh ${CONF_FILE:-config/get_started.json}",
    "createQaBundle": "sh ./tools/bundle/create_bundle.sh ${CONF_FILE:-config/get_started.json}",
    "cy:open": "cypress open",
    "cy:run": "cypress run"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "allowImportExportEverywhere": true
    },
    "rules": {
      "no-undef": "off",
      "no-unused-vars": "off",
      "no-prototype-builtins": "off",
      "indent": "error",
      "no-tabs": "error"
    }
  },
  "browserslist": {
    "production": [
      "defaults"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
